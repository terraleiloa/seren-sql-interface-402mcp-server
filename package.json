{
  "name": "@serendb/x402-mcp-server",
  "version": "0.5.1",
  "description": "MCP Server enabling AI agents to pay for x402-protected API queries using USDC on Base",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "x402-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:ci": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:e2e": "NODE_OPTIONS='--experimental-vm-modules' jest tests/e2e --runInBand",
    "test:e2e:watch": "NODE_OPTIONS='--experimental-vm-modules' jest tests/e2e --watch --runInBand"
  },
  "keywords": [
    "mcp",
    "x402",
    "payments",
    "usdc",
    "base",
    "ai-agents"
  ],
  "author": "SerenAI",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/serenorg/x402-mcp-server.git"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@walletconnect/sign-client": "2.23.0",
    "dotenv": "^16.4.0",
    "viem": "^2.38.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@walletconnect/types": "^2.23.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.9.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
